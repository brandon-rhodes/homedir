{
  "manifest_version": 2,
  "name": "My user stylesheets",
  "version": "0.1.0",
  "description": "Fix problems with various web sites",
  "chrome_url_overrides": {
    "newtab": "/newtab.html"
  },
  "content_scripts": [
    {
      "css": ["style-luu.css"],
      "matches": ["https://danluu.com/*"]
    },
    {
      "css": ["style-gmail.css"],
      "matches": ["https://mail.google.com/*"]
    },
    {
      "css": ["style-thepartysource.css"],
      "matches": ["https://thepartysource.com/*"]
    },
    {
      "css": ["style-thespruce.css"],
      "matches": ["https://www.thespruce.com/*"]
    },
    {
      "css": ["style-twitter.css"],
      "matches": ["https://twitter.com/*"]
    }
  ],
  "permissions": [
    "bookmarks"
  ]
}
