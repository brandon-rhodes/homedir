#!/bin/bash

set -e

mkdir -p ~/.fonts
if [ ! -f ~/.fonts/unixpc-system.8.bdf ]
then
    wget -P ~/.fonts https://raw.githubusercontent.com/brandon-rhodes/unixpc-font-bdf/master/unixpc-system.8.bdf
fi
mkfontdir ~/.fonts
xset fp+ ~/.fonts
xset fp rehash
exec xterm \
     -fa '' \
     -font '-unixpc-system-*' \
     -fb '-unixpc-system-*' \
     -bg black \
     -fg green \
     -cm \
     +bdc \
     -xrm 'xterm*boldMode: off' \
     /bin/bash
